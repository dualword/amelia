        <message>
		Look mommy, I've found the Higgs!
        </message>
      </action>
    </action>
    <action type="ATourCameraAction" duration="6000">
      <camera x="1000" y="200" z="-300" />
      <target x="30" y="30" z="30" />
    </action>
    <action type="ATourPtCutAction" duration="5000" value="10000">
      <hint type="Widget" name="PtCutoff_Slider"/>
      <action type="ATourMessageAction" duration="5000">
        <message>
                Gimme the big a$$ leptons!
        </message>
      </action>
    </action>
    <action type="ATourCameraAction" duration="7000">
      <camera x="1000" y="2000" z="-300" />
