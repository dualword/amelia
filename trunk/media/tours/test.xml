    <action type="ATourCameraAction" duration="2000">
      <camera x="1000" y="1000" z="1000" />
      <target x="0" y="0" z="0" />
    </action>
    <action type="ATourCameraAction" duration="5000">
      <camera x="100" y="200" z="-300" />
      <target x="30" y="30" z="30" />
      <action type="ATourMessageAction" duration="4000">
	<message>
	  KABOOM! I'm awesome!!!!
	</message>
      </action>
    </action>
    <action type="ATourLoadEventAction" duration="5000" file="event:special-higgs.xml">
