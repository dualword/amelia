    </action>
    <action type="ATourCameraAction" duration="7000">
      <camera x="0" y="200" z="00" />
      <target x="0" y="0" z="0" />
    </action>
    <action type="ATourViewportChangeAction" duration="10000">
      <viewport name="Front"/>
    </action>
    <action type="ATourViewportChangeAction" duration="10000">
      <viewport name="Side"/>
    </action>
  </block>
  <block>
    <action type="ATourCameraAction" duration="10000">
      <camera x="0" y="1000" z="1000" />
      <target x="0" y="0" z="0" />
    </action>
    <action type="ATourCameraAction" duration="5000">
      <camera x="100" y="2000" z="-300" />
      <target x="30" y="100" z="30" />
    </action>
    <action type="ATourCameraAction" duration="6000">
      <camera x="1000" y="200" z="-300" />
      <target x="30" y="30" z="30" />
    </action>
    <action type="ATourCameraAction" duration="7000">
      <camera x="1000" y="2000" z="-300" />
      <target x="0" y="1000" z="0" />
    </action>
    <action type="ATourMonitorAction" duration="10000" monitor=""/>
